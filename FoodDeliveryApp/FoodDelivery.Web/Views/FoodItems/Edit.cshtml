@model FoodDelivery.Domain.DomainModels.FoodItem

@{
    ViewData["Title"] = "Edit Food Item";
}

<!-- Hero Section -->
<div class="hero-section d-flex align-items-center justify-content-center text-white text-center" style="height: 20vh;">
    <div>
        <h1 class="display-5 fw-bold">Edit Food Item</h1>
        <p class="lead">Update the details of your food item below.</p>
    </div>
</div>

<!-- Form Container -->
<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh; margin-top: -5vh;">
    <div class="card shadow-lg p-4 rounded" style="width: 100%; max-width: 500px; background: rgba(255, 255, 255, 0.95);">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Name -->
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label fw-bold">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter food item name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Price -->
            <div class="form-group mb-3">
                <label asp-for="Price" class="form-label fw-bold">Price ($)</label>
                <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Enter price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label fw-bold">Description</label>
                <textarea asp-for="Description" class="form-control" rows="2" placeholder="Enter description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Image -->
            <div class="form-group mb-3">
                <label asp-for="Image" class="form-label fw-bold">Image URL</label>
                <input asp-for="Image" class="form-control" placeholder="Enter image URL" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <!-- Category -->
            <div class="form-group mb-3">
                <label asp-for="Category" class="form-label fw-bold">Category</label>
                <input asp-for="Category" class="form-control" placeholder="Enter category" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <!-- Preparation Time -->
            <div class="form-group mb-3">
                <label asp-for="TimeToPrepareMinutes" class="form-label fw-bold">Time to Prepare (Minutes)</label>
                <input asp-for="TimeToPrepareMinutes" type="number" min="1" class="form-control" placeholder="Enter preparation time" />
                <span asp-validation-for="TimeToPrepareMinutes" class="text-danger"></span>
            </div>

            <!-- Hidden Fields -->
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="RestaurantId" />

            <!-- Buttons -->
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success btn-lg">Save</button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
