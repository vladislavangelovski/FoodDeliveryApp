@model FoodDelivery.Domain.DomainModels.Restaurant

@{
    ViewData["Title"] = "Delete";
}

<div class="hero-section d-flex align-items-center justify-content-center text-white text-center" style="height: 20vh;">
    <div>
        <h1 class="display-5 fw-bold">Delete Restaurant</h1>
        <p class="lead mb-0">Are you sure you want to delete this restaurant?</p>
    </div>
</div>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh; margin-top: -5vh;">
    <div class="card shadow-lg p-4 rounded" style="width: 100%; max-width: 500px; background: rgba(255, 255, 255, 0.95);">
        <div class="text-center mb-3">
            <img src="@Model.Image" alt="Restaurant Image" class="img-fluid rounded" style="max-height: 200px; object-fit: cover;" />
        </div>
        <h4 class="text-center mb-3">@Model.Name</h4>

        <dl class="row small">
            <dt class="col-sm-4 text-end fw-bold">Address:</dt>
            <dd class="col-sm-8">@Model.Address</dd>

            <dt class="col-sm-4 text-end fw-bold">Phone:</dt>
            <dd class="col-sm-8">@Model.PhoneNumber</dd>

            <dt class="col-sm-4 text-end fw-bold">Description:</dt>
            <dd class="col-sm-8">@Model.Description</dd>

            <dt class="col-sm-4 text-end fw-bold">Rating:</dt>
            <dd class="col-sm-8">@Model.Rating</dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-danger">Confirm Delete</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
